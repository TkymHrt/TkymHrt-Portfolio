{
  "name": "tkymhrt-portfolio",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "lint:code": "biome lint ./src",
    "lint:style": "biome format ./src",
    "fix:style": "biome format --write ./src",
    "fix:code": "biome lint --apply ./src",
    "preview": "vite preview",
    "build:server": "tsc && vite build --ssr src/entry-server.tsx --outDir dist/server",
    "generate": "vite build --outDir dist/static && npm run build:server && node prerender"
  },
  "dependencies": {
    "@tsparticles/engine": "^3.3.0",
    "@tsparticles/react": "^3.0.0",
    "@tsparticles/slim": "^3.3.0",
    "framer-motion": "^11.0.20",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.26.2",
    "react-scroll": "^1.9.0"
  },
  "devDependencies": {
    "@biomejs/biome": "1.6.2",
    "@types/react": "^18.3.5",
    "@types/react-dom": "^18.2.22",
    "@types/react-scroll": "^1.8.10",
    "@vitejs/plugin-react-swc": "^3.5.0",
    "autoprefixer": "^10.4.19",
    "postcss": "^8.4.38",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.6.2",
    "vite": "^5.2.0"
  }
}
